extends layout 

block content 
  h1= title

  p Enter the correct PIN to receive membership perks

  if currentUser.membership === false
    form(action="" method="POST")
      .form-group 
        input#pin(type="password" name="pin" maxlength="6") 
      button.std-btn(type="submit") Enter
  else 
    p.member-alt-msg You are already a member

  if errors 
    ul.error-list 
      for error in errors 
        li.error!= error
  
  a.link(href="/home") Cancel 